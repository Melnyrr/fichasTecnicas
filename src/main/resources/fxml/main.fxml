<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.image.ImageView?>

<?import javafx.scene.image.Image?>

<?import javafx.geometry.Insets?>


<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="starter.ui.MainController">

<!-- SIDEBAR LEFT -->
<left>
    <VBox fx:id="sidebar" styleClass="sidebar">

<!-- Sidebar Header -->

<VBox fx:id="sidebarHeader" styleClass="sidebar-header">
<padding>
<Insets top="24" right="20" bottom="20" left="20"/>
</padding>

<!-- Contenedor HBox: Logo, Nombre de app + subtítulo, y botón de tema -->
<HBox spacing="12" styleClass="sidebar-header-content" alignment="CENTER_LEFT">
    <!-- Logo - replaced text with ImageView -->
    <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
        <Image url="@../assets/logo.png"/>
    </ImageView>

    <!-- Título y subtítulo -->
    <VBox spacing="2" styleClass="sidebar-title-container">
        <Label text="Fichas Técnicas" styleClass="sidebar-app-name"/>
        <Label text="Troquedom SRL" styleClass="sidebar-app-subtitle"/>
    </VBox>

    <!-- Botón de cambio de tema (push to end) -->
    <Button 
        fx:id="themeSwitcherButton" 
        styleClass="theme-switcher-button"
        onAction="#toggleTheme"
        HBox.hgrow="ALWAYS"
        maxWidth="40"
        alignment="CENTER_RIGHT"/>
</HBox>

</VBox>

        <!-- Navigation Section -->
        <VBox fx:id="navigationSection" styleClass="navigation-section" spacing="2">
            <!-- Navigation Buttons -->
            <Button fx:id="equiposNavButton" 
                    text="Equipos" 
                    styleClass="nav-button, nav-button-active"
                    onAction="#navigateToEquipos"
                    maxWidth="Infinity"
                    focusTraversable="false"/>
            
            <Button fx:id="mantenimientosNavButton" 
                    text="Mantenimientos" 
                    styleClass="nav-button"
                    onAction="#navigateToMantenimientos"
                    maxWidth="Infinity"
                    focusTraversable="false"/>
            
            <Button fx:id="softwareNavButton" 
                    text="Software" 
                    styleClass="nav-button"
                    onAction="#navigateToSoftware"
                    maxWidth="Infinity"
                    focusTraversable="false"/>
        </VBox>
    </VBox>
</left>

<!-- CONTENT AREA -->
<center>
    <VBox fx:id="contentArea" styleClass="content-area">
        <!-- El contenido de las vistas se mostrará aquí dinámicamente -->
    </VBox>
</center>

</BorderPane>